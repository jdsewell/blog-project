<!DOCTYPE html>
<html>
  <head>
    <title>TechTalentBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="wallpaper">
    <nav class="navbar navbar-fixed-top head">
      <div class="pull-left">
        <%= link_to 'Home', index_path, class: "btn btn-primary" %>
        <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
      </div>
      <div class="pull-right">
        <% if user_signed_in? %>
          <% if current_user.avatar.url != nil %>
            <%= image_tag current_user.avatar.url, size: 30 %>
          <% end %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
