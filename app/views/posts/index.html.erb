<p id="notice"><%= notice %></p>


<div class="jumbotron">
  <p>Logged in as: <b><%= current_user.username %></b></p>
  <center><h1>Posts</h1></center>

  <div class="container">
    <div class="col-xs-2">
      <h4>Authors</h4>
    </div>
    <div class="col-xs-9">
      <h4 class="pull-left">Blog Posts</h4>
    </div>
    <div class="col-xs-1">
    <!--   <h4>Options</h4> -->
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class="container">
      <div class="col-xs-2 author_name"><span><%= post.user.username %></span></div>
        <div class="col-xs-10 post"><%= post.blog_entry.html_safe %></div>
        <div class="col-xs-2"></div>
        <div class="col-xs-10">
        <nav class="navbar pull-left">
          <%= link_to 'Show', post, class: "btn btn-primary option" %>
          <%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary option" %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger option" %>
        </nav>
        </div>
    </div>
  <% end %>



 <%= paginate @posts %>
</div>

<br>

