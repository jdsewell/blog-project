<div class="wallpaper">
<div class="jumbotron">
	<p id="notice"><%= notice %></p>
	<div class="container">
	<div class="post">
	<p>
		<strong>Author:</strong>
		<%= @post.user.username %>
	</p>

	<p>
		<strong>Blog entry:</strong>
		<%= @post.blog_entry.html_safe %>
	</p>
	<div><%=  link_to 'Edit', edit_post_path(@post) %></div>
	</div>
	</div>
	<div class="container">
	<div id="comments">
		<div>
			<%= render 'comments/form', comment: @comment %>
		</div>
		<div class="col-xs-12"><br></div>
		
		<% @post.comments.each do |comment| %>
			<div class="comment"><%= comment.user.username %><br>
			<%= comment.comment_entry %></div>
		<% end %>
		
	</div>
	<div class="btn btn-default"><%= link_to 'Back', posts_path %></div>
	</div>
</div>
</div>