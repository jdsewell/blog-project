
	<p id="notice"><%= notice %></p>
	<div class="container">
	<div class="post">
	<p>
		<strong>Author:</strong>
		<%= link_to @post.user.username, user_posts_path(name: @post.user.username) %>
	</p>

	<p>
		<strong>Blog entry:</strong>
		<%= @post.blog_entry.html_safe %>
	</p>
	<div><%=  link_to 'Edit', edit_post_path(@post) %></div>
	</div>
	</div>
	<div class="container">
	<div id="comments">
		<div>
			<%= render 'comments/form', comment: @comment %>
		</div>
		<div class="col-xs-12"><br></div>
		
		<% @post.comments.each do |comment| %>
			<div class="comment"><%= link_to comment.user.username, user_posts_path(name: comment.user.username) %><br>
			<%= comment.comment_entry %></div>
		<% end %>
		
	</div>
	<div><%= link_to 'Back', posts_path, class: "btn btn-default" %></div>
	</div>